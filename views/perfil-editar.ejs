<%- include('./partials/header') %>

    <main class='edicao-principal'>
        <div class='edicao-perfil'>
            <form method="POST" action="/usuario/perfil/editar?_method=PUT" enctype="multipart/form-data">
                <div class='campo'>
                    <label for="nome">Nome:</label>
                    <input type="text" id='nome' name='nome' value="<%= sessao.user.nome %>">
                </div>
                <div class='campo'>
                    <label for="sobrenome">Sobrenome:</label>
                    <input type="text" id='sobrenome' name='sobrenome' value="<%= sessao.user.sobrenome %>">
                </div>
                <div class='campo'>
                    <label for="cpf ">CPF:</label>
                    <input type="text " id='cpf' name='cpf' value="<%=sessao.user.cpf %>">
                </div>
                <div class='campo'>
                    <label for="data_de_nascimento">Data de nascimento:</label>
                    <input type="text" id='data_de_nascimento' name='data_de_nascimento' value="<%= sessao.user.data_de_nascimento %>">
                </div>
                <div class='campo'>
                    <label for="telefone">Telefone:</label>
                    <input type="tel" id='telefone' maxlength='11' name='telefone' placeholder="DDD + Número sem traços ou espaços" value="<%= sessao.user.telefone %>">
                </div>
                <div class='campo'>
                    <label for="genero">Genêro:</label>
                    <input type="text" id='genero' name='genero' value="<%= sessao.user.genero %>">
                </div>

                <div class='campo'>
                    <label for="senha">Alterar senha:</label>
                    <input type="password" id='senha' name='senha' placeholder="Pelo menos 6 dígitos" required>
                </div>
                <div class='campo'>
                    <label for="email">Alterar e-mail:</label>
                    <input type="email" id='email' name='email' value="<%= sessao.user.email %>">
                </div>
                <div class='campo'>
                    <label for="confirmarsenha">Digite novamente a sua senha:</label>
                    <input type="password" id='confirmarsenha' name='confirmarsenha' placeholder="Pelo menos 6 dígitos" required>
                </div>
                <div class='novidades'>
                    <p>Deseja receber promoções e novidades regularmente?</p>
                    <input type="checkbox">
                </div>
                <div class='submit'>
                    <button type="submit">Salvar alterações</button>
                </div>
            </form>
        </div>
    </main>

    <%- include('./partials/footer') %>